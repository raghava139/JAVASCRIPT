<script>

        const x=[2,3,4,3,43,23,34,223,343]
        //syntax-------array.reduce(function(previousvalue,currentvalue,arr),initial value)
        const y= x.reduce((total,current)=>{

            return total+current
            // console.log(total);
            
        },0);
        console.log(y);
</script>
